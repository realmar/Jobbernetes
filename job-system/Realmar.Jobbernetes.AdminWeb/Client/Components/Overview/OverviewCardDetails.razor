@using Realmar.Jobbernetes.AdminWeb.Client.Formatters
@using Realmar.Jobbernetes.AdminWeb.Shared.Models

<MudGrid Class="py-2" Style="text-align: center">
    <MudItem xs="12" Class="py-0">
        <MudText Color="Color" Typo="Typo.h5">@(Metrics?.Count.Format() ?? Constants.MissingValue)</MudText>
    </MudItem>
    <MudItem xs="12" Class="py-0">
        <MudText Color="Color" Typo="Typo.h5">@(Metrics?.Throughput.Format() ?? Constants.MissingValue)</MudText>
    </MudItem>
</MudGrid>

@code {

    [Parameter]
    public ProcessingMetrics? Metrics { get; set; }

    [Parameter]
    public Color Color { get; set; } = Color.Default;

}
